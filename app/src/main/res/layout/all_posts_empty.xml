<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/textDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:textSize="20sp"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:text="Não há nenhum post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/imageFavorites"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDescription"
        android:src="@drawable/imageallposts"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textDescription2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageFavorites"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary"
        android:text="Todas as publicações ficam aqui!"
        android:layout_marginEnd="20dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>